<div id="search-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
  <div class="bg-white w-full max-w-md mx-auto rounded-lg shadow-lg p-6">
    <div class="flex justify-between items-center mb-4">
      <input
        type="text"
        id="search-input"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
        placeholder="Search products..."
      >
      <button id="close-modal" class="text-gray-600 hover:text-gray-900">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <div id="search-results" class="space-y-4"></div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const searchModal = document.getElementById('search-modal');
    const closeModalButton = document.getElementById('close-modal');
    const searchInput = document.getElementById('search-input');
    const searchResults = document.getElementById('search-results');

    // Open modal
    document.querySelectorAll('.search-icon').forEach((icon) => {
      icon.addEventListener('click', function (e) {
        e.preventDefault();
        searchModal.classList.remove('hidden');
        searchInput.focus();
      });
    });

    // Close modal
    closeModalButton.addEventListener('click', function () {
      searchModal.classList.add('hidden');
      searchResults.innerHTML = '';
      searchInput.value = '';
    });

    // Fetch search suggestions
    searchInput.addEventListener('input', function () {
      const query = searchInput.value.trim();
      if (query.length > 2) {
        fetch(`/search/suggest.json?q=${query}&resources[type]=product`)
          .then((response) => response.json())
          .then((data) => {
            searchResults.innerHTML = '';
            data.resources.results.products.forEach((product) => {
              const productItem = document.createElement('div');
              productItem.classList.add('flex', 'items-center', 'space-x-4');
              productItem.innerHTML = `
                                <img src="${product.image}" alt="${
                product.title
              }" class="w-16 h-16 object-cover rounded-lg">
                                <div>
                                    <h3 class="text-lg font-semibold">${product.title}</h3>
                                    <p class="text-gray-600">${product.vendor}</p>
                                    <p class="text-gray-900">${Shopify.formatMoney(
                                      product.price,
                                      '${{ shop.currency }}'
                                    )}</p>
                                </div>
                            `;
              searchResults.appendChild(productItem);
            });
          })
          .catch((error) => console.error('Error fetching search suggestions:', error));
      } else {
        searchResults.innerHTML = '';
      }
    });
  });
</script>
